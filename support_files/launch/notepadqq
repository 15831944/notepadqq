#!/bin/sh
cd `dirname $0` > /dev/null
SCRIPTPATH=`pwd -P`
cd - > /dev/null

if [ -f "$SCRIPTPATH"/../appdata/notepadqq ];
then
    export LD_LIBRARY_PATH="$SCRIPTPATH"/../appdata/libs/qt:"$SCRIPTPATH"/../appdata/libs
    "$SCRIPTPATH"/../appdata/notepadqq "$@"
else
    export LD_LIBRARY_PATH="$SCRIPTPATH"/../share/notepadqq/libs/qt:"$SCRIPTPATH"/../share/notepadqq/libs
    "$SCRIPTPATH"/../share/notepadqq/notepadqq "$@"
fi
